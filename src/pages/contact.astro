---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - ServerHi">
  <div class="container">
    <article class="contact-page">
      <header class="page-header fade-in-up">
        <h1 class="page-title">
          <span class="terminal-prompt"></span>
          Contact Us
        </h1>
        <p class="page-description">
          Have questions, suggestions, or feedback? We'd love to hear from you.
        </p>
      </header>

      <div class="content-wrapper">
        <div class="contact-grid">
          <!-- Contact Form -->
          <section class="contact-form-section fade-in-up">
            <div class="terminal-window">
              <div class="terminal-header">
                <span class="terminal-dot red"></span>
                <span class="terminal-dot yellow"></span>
                <span class="terminal-dot green"></span>
              </div>
              <div class="form-container">
                <form class="contact-form" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
                  <div class="form-group">
                    <label for="name" class="form-label">
                      <span class="terminal-prompt"></span>
                      Name
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="form-input"
                      placeholder="Your name"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <label for="email" class="form-label">
                      <span class="terminal-prompt"></span>
                      Email
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-input"
                      placeholder="your.email@example.com"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <label for="subject" class="form-label">
                      <span class="terminal-prompt"></span>
                      Subject
                    </label>
                    <input
                      type="text"
                      id="subject"
                      name="subject"
                      class="form-input"
                      placeholder="What's this about?"
                      required
                    />
                  </div>

                  <div class="form-group">
                    <label for="message" class="form-label">
                      <span class="terminal-prompt"></span>
                      Message
                    </label>
                    <textarea
                      id="message"
                      name="message"
                      class="form-textarea"
                      placeholder="Your message here..."
                      rows="6"
                      required
                    ></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary terminal-hover">
                    Send Message ‚Üí
                  </button>
                </form>
              </div>
            </div>
          </section>

          <!-- Contact Info -->
          <aside class="contact-info-section fade-in-up">
            <div class="info-card terminal-window">
              <div class="terminal-header">
                <span class="terminal-dot red"></span>
                <span class="terminal-dot yellow"></span>
                <span class="terminal-dot green"></span>
              </div>
              <div class="info-content">
                <h2 class="info-title">
                  <span class="terminal-prompt"></span>
                  Get in Touch
                </h2>
                <p class="info-description">
                  We typically respond within 24-48 hours.
                </p>

                <div class="contact-methods">
                  <div class="contact-method">
                    <span class="method-icon">üìß</span>
                    <div class="method-details">
                      <h3>Email</h3>
                      <a href="mailto:contact@serverhi.com">contact@serverhi.com</a>
                    </div>
                  </div>

                  <div class="contact-method">
                    <span class="method-icon">üåê</span>
                    <div class="method-details">
                      <h3>Website</h3>
                      <a href="https://serverhi.com">serverhi.com</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="info-card terminal-window">
              <div class="terminal-header">
                <span class="terminal-dot red"></span>
                <span class="terminal-dot yellow"></span>
                <span class="terminal-dot green"></span>
              </div>
              <div class="info-content">
                <h2 class="info-title">
                  <span class="terminal-prompt"></span>
                  Quick Links
                </h2>
                <ul class="quick-links">
                  <li><a href="/posts">Browse Tutorials</a></li>
                  <li><a href="/category/docker">Docker Guides</a></li>
                  <li><a href="/category/linux">Linux Tutorials</a></li>
                  <li><a href="/about">About Us</a></li>
                </ul>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </article>
  </div>
</BaseLayout>

<style>
  .contact-page {
    padding: 2rem 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-description {
    color: var(--text-secondary);
    font-size: 1.125rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    align-items: start;
  }

  .form-container {
    padding: 2rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-label {
    font-family: var(--font-code);
    font-size: 0.9rem;
    color: var(--text);
    font-weight: 600;
  }

  .form-input,
  .form-textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: var(--radius-sm);
    color: var(--text);
    font-family: var(--font-body);
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .form-input:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 2px rgba(var(--primary-rgb), 0.1);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-sm);
    font-family: var(--font-code);
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    align-self: flex-start;
  }

  .btn-primary {
    background: var(--primary);
    color: var(--background);
  }

  .btn-primary:hover {
    box-shadow: 0 0 20px var(--primary);
    transform: translateY(-2px);
  }

  .contact-info-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .info-card {
    position: sticky;
    top: 100px;
  }

  .info-content {
    padding: 2rem;
  }

  .info-title {
    font-size: 1.25rem;
    margin-bottom: 1rem;
  }

  .info-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-method {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .method-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .method-details h3 {
    font-size: 1rem;
    margin-bottom: 0.25rem;
    color: var(--text);
  }

  .method-details a {
    color: var(--accent);
    text-decoration: none;
    font-family: var(--font-code);
    font-size: 0.9rem;
  }

  .method-details a:hover {
    color: var(--primary);
  }

  .quick-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .quick-links li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
  }

  .quick-links li:last-child {
    border-bottom: none;
  }

  .quick-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-family: var(--font-code);
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .quick-links a::before {
    content: '‚Üí ';
    color: var(--primary);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .quick-links a:hover {
    color: var(--primary);
  }

  .quick-links a:hover::before {
    opacity: 1;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .info-card {
      position: static;
    }
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .form-container {
      padding: 1.5rem;
    }
  }
</style>
