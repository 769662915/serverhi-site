---
import { site } from '../lib/config';
import ThemeToggle from './ThemeToggle';
import MobileMenu from './MobileMenu';
---

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <a href="/" class="logo terminal-hover">
        <span class="logo-bracket">[</span>
        <span class="logo-text glow-primary">{site.name}</span>
        <span class="logo-bracket">]</span>
      </a>

      <nav class="main-nav">
        <a href="/" class="nav-link terminal-hover">Home</a>
        <a href="/posts" class="nav-link terminal-hover">Tutorials</a>
        <a href="/category/docker" class="nav-link terminal-hover">Docker</a>
        <a href="/category/linux" class="nav-link terminal-hover">Linux</a>
        <a href="/category/devops" class="nav-link terminal-hover">DevOps</a>
        <a href="/search" class="nav-link terminal-hover">Search</a>
      </nav>

      <div class="header-actions">
        <ThemeToggle client:load />
        <div class="mobile-menu-wrapper">
          <MobileMenu client:load />
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .site-header {
    background: rgba(var(--surface-rgb), 0.85);
    border-bottom: 1px solid var(--border);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .logo-bracket {
    color: var(--secondary);
  }

  .logo-text {
    color: var(--primary);
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .nav-link {
    font-family: var(--font-code);
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-link::before {
    content: '> ';
    color: var(--primary);
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .nav-link:hover {
    color: var(--primary);
  }

  .nav-link:hover::before {
    opacity: 1;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .mobile-menu-wrapper {
    display: none;
  }

  @media (max-width: 768px) {
    .main-nav {
      display: none;
    }

    .mobile-menu-wrapper {
      display: block;
    }

    .logo {
      font-size: 1.25rem;
    }
  }
</style>

<style is:global>
  /* 汉堡菜单按钮样式 */
  .mobile-menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 1001;
    position: relative;
  }

  .hamburger-line {
    width: 2rem;
    height: 2px;
    background: var(--primary);
    border-radius: 2px;
    transition: all 0.3s ease;
    transform-origin: center;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translateY(0.5rem);
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translateY(-0.5rem);
  }

  /* 移动端菜单覆盖层 */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--background);
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    padding-top: 5rem;
    overflow-y: auto;
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* 移动端导航 */
  .mobile-nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
  }

  .mobile-nav-link {
    font-family: var(--font-code);
    font-size: 1.25rem;
    color: var(--text-secondary);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    width: 100%;
    max-width: 300px;
    transition: all 0.3s ease;
    background: var(--surface);
  }

  .mobile-nav-link:hover {
    color: var(--primary);
    border-color: var(--primary);
    background: rgba(var(--primary-rgb), 0.1);
    transform: translateX(0.5rem);
  }

  .nav-icon {
    font-size: 1.5rem;
  }
</style>
