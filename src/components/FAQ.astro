---
/**
 * FAQ 组件
 * 显示常见问题并添加 FAQ Schema
 */
import FAQSchema from './schema/FAQSchema.astro';

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
  title?: string;
}

const { faqs, title = '常见问题 (FAQ)' } = Astro.props;
---

<section class="faq-section">
  <h2 class="faq-title">
    <span class="terminal-prompt"></span>
    {title}
  </h2>

  <div class="faq-container">
    {faqs.map((faq, index) => (
      <details class="faq-item terminal-window" open={index === 0}>
        <summary class="faq-question">
          <span class="question-icon">❓</span>
          <span class="question-text">{faq.question}</span>
          <span class="expand-icon">▼</span>
        </summary>
        <div class="faq-answer">
          <p>{faq.answer}</p>
        </div>
      </details>
    ))}
  </div>

  <FAQSchema faqs={faqs} />
</section>

<style>
  .faq-section {
    margin: 3rem 0;
    padding: 2rem 0;
    border-top: 1px solid var(--border);
  }

  .faq-title {
    font-size: 1.75rem;
    margin-bottom: 2rem;
    font-family: var(--font-heading);
    color: var(--text);
  }

  .faq-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    border-color: var(--primary);
    box-shadow: 0 0 10px rgba(var(--primary-rgb), 0.1);
  }

  .faq-item[open] {
    border-color: var(--primary);
  }

  .faq-question {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    cursor: pointer;
    font-family: var(--font-code);
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
    list-style: none;
    user-select: none;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .question-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .question-text {
    flex: 1;
  }

  .expand-icon {
    font-size: 0.875rem;
    color: var(--primary);
    transition: transform 0.3s ease;
  }

  .faq-item[open] .expand-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem 4rem;
    color: var(--text-secondary);
    line-height: 1.7;
    animation: fadeIn 0.3s ease;
  }

  .faq-answer p {
    margin: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .faq-question {
      padding: 1rem;
      font-size: 0.9rem;
    }

    .faq-answer {
      padding: 0 1rem 1rem 3rem;
      font-size: 0.9rem;
    }

    .question-icon {
      font-size: 1.25rem;
    }
  }
</style>
